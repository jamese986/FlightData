<div class="container">
  <div class="form-group col-md-6">
    <p id="”alert”"><%= alert %></p>
    <h1>Add New Flight</h1>
    <%= form_tag flights_path do |form| %>
    <div class="form-row">
      <div class="form-group col-md-6 field">
        <%= label_tag :departureTime %>
        <%= text_field_tag :text %>
      </div>
      <div class="form-group col-md-6 field">
        <%= label_tag :arrivalTime %>
        <%= text_field_tag :text %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 field">
        <%= label_tag :seats %><br/>
        <%= text_field_tag :text %>
      </div>
      <div class="form-group col-md-6 field">
        <%= label_tag :price %><br/>
        <%= text_field_tag :text %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 field">
        <%= label_tag :destination %><br/>
        <%= text_field_tag :text %>
      </div>
      <div class="form-group col-md-6 field">
        <%= label_tag :base_airport %><br/>
        <%= text_field_tag :text %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6 field">
        <%= label_tag :stops %><br/>
        <%= text_field_tag :text %>
      </div>
      <div class="form-group col-md-6 field">
        <%= label_tag :equipment %><br/>
        <%= text_field_tag :text %>
      </div>
    </div>
  </div>

  <% end %>

  <div class="col-md-12">
    <%= render 'form', flight: @flight %>
    <%= link_to 'Back', flights_path %>
  </div>
</div>
