<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Flights</h1>
  <table class="table table-bordered table-hover ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Departure Time</th>
      <th scope="col">Arrival Time</th>
      <th scope="col">source_airport</th>
      <th scope="col">destination</th>
      <th scope="col">stops</th>
      <th scope="col">seats</th>
      <th scope="col">price</th>
      <th scope="col">equipment</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
    <tr>
      <th scope="row">#</th>
      <td><%= flight.departureTime %></td>
      <td><%= flight.arrivalTime %></td>
      <td><%= flight.base_airport %></td>
      <td><%= flight.destination %></td>
      <td><%= flight.stops %></td>
      <td><%= flight.seats %></td>
      <td><%= flight.price %></td>
      <td><%= flight.equipment %></td>
      <td><%= link_to 'Show', flight %></td>
      <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
      <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
</table>


  <br>

  <%= link_to 'New Flight', new_flight_path %>
</div>
